<%- include('header.ejs') %>
<body class="bg-light">
    <div class="container py-5">
        <h1 class="mb-4 text-center">Mini Blog</h1>
        <form method="GET" action="/" class="mb-4">
            <div class="row g-2 align-items-center">
                <div class="col-auto">
                    <select name="categorie" class="form-select">
                        <option value="">Toutes les catégories</option>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.libelle %>" <%= (typeof categorie !== 'undefined' && categorie === cat.libelle) ? 'selected' : '' %>><%= cat.libelle %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-secondary">Filtrer</button>
                </div>
                <div class="col-auto ms-auto">
                    <a href="/new" class="btn btn-primary">Créer un nouvel article</a>
                </div>
            </div>
        </form>
        <div class="row">
            <% articles.forEach(article => { %>
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <a href="/article/<%= article.id %>" class="text-decoration-none text-dark">
                            <h2 class="card-title"><%= article.title %></h2>
                            <p class="card-text"><%= article.content.substring(0, 100) %><%= article.content.length > 100 ? '...' : '' %></p>
                        </a>
                        <p class="text-muted mt-2">Catégorie : <%= article.categorie %></p>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>