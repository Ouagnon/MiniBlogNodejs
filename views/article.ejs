<%- include('header.ejs') %>
<body class="bg-light">
    <div class="container py-5">
        <div class="mb-4">
            <a href="/" class="btn btn-outline-primary">&larr; Retour au menu</a>
        </div>
    <div class="mb-4">
        <form action="/article/<%= article.id %>/delete" method="POST" onsubmit="return confirm('Voulez-vous vraiment supprimer cet article ?');" class="d-grid gap-2">
            <button type="submit" class="btn btn-danger">Supprimer l'article</button>
        </form>
    </div>
    <div class="card mb-4 mx-auto" style="max-width: 700px;">
        <div class="card-body">
            <h1 class="card-title text-center mb-3"><%= article.title %></h1>
            <% if (article.image) { %>
                <div class="text-center mb-3">
                    <img src="/article/<%= article.id %>/image" alt="Image de l'article" class="img-fluid rounded" style="max-height:300px;" />
                </div>
            <% } %>
            <div class="content mb-4">
                <p class="card-text"><%= article.content %></p>
                <p class="text-muted mt-2">Cat√©gorie : <%= article.categorie %></p>
            </div>
        </div>
    </div>
        <div class="card mb-4 mx-auto" style="max-width: 700px;">
            <div class="card-body">
                <h2 class="mb-3">Commentaires</h2>
                <div class="comments mb-3">
                    <% if (comments.length === 0) { %>
                        <p class="text-muted">Aucun commentaire pour le moment.</p>
                    <% } else { %>
                        <% comments.forEach(comment => { %>
                            <div class="comment border-bottom pb-2 mb-2">
                                <strong class="text-primary"><%= comment.pseudo %> :</strong>
                                <p class="mb-0"><%= comment.texte %></p>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
                <form action="/article/<%= article.id %>/comment" method="POST">
                    <div class="mb-3">
                        <label for="pseudo" class="form-label">Votre pseudo</label>
                        <input type="text" id="pseudo" name="pseudo" class="form-control" placeholder="Votre pseudo" required>
                    </div>
                    <div class="mb-3">
                        <label for="text" class="form-label">Ajouter un commentaire</label>
                        <textarea id="text" name="text" class="form-control" placeholder="Ajouter un commentaire" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success w-100">Commenter</button>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

