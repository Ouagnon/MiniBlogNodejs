<%- include('header.ejs') %>
<body class="bg-light">
    <div class="container py-5">
      <div class="mb-4">
        <a href="/" class="btn btn-outline-primary">&larr; Retour au menu</a>
      </div>
      <h1 class="mb-4 text-center">Créer un nouvel article</h1>
      <form
        action="/new"
        method="POST"
        enctype="multipart/form-data"
        class="card p-4 shadow-sm mx-auto"
        style="max-width: 600px"
      >
        <div class="mb-3">
          <label for="image" class="form-label">Image de l'article</label>
          <input type="file" id="image" name="image" class="form-control" accept="image/*" />
        </div>
        <div class="mb-3">
          <label for="title" class="form-label">Titre</label>
          <input
            type="text"
            id="title"
            name="title"
            class="form-control"
            placeholder="Titre"
            required
          />
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Contenu</label>
          <textarea
            id="content"
            name="content"
            class="form-control"
            placeholder="Contenu"
            rows="6"
            required
          ></textarea>
        </div>
        <div class="mb-3">
          <label for="category" class="form-label">Catégorie</label>
          <select id="category" name="category" class="form-select" required>
            <% categories.forEach(cat=> { %>
            <option value="<%= cat.id %>"><%= cat.libelle %></option>
            <% }) %>
          </select>
        </div>
        <button type="submit" class="btn btn-success w-100">Publier</button>
      </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
